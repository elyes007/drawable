<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane minWidth="1300.0" stylesheets="@../../css/global.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.disguisedtoast.drawable.settingsModule.controllers.SettingsViewController">
   <right>
      <Pane id="previewPane" fx:id="previewPane" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin></Pane>
   </right>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Pane prefWidth="1.0" styleClass="separator" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="20.0" top="20.0" />
               </BorderPane.margin>
            </Pane>
         </right>
         <center>
             <ScrollPane BorderPane.alignment="CENTER">
                 <content>
                     <BorderPane>
                         <center>
                             <AnchorPane fx:id="settingsPane" BorderPane.alignment="CENTER"/>
                         </center>
                     </BorderPane>
                 </content>
             </ScrollPane>
         </center>
         <bottom>
            <VBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="1.0" styleClass="light_separator">
                     <VBox.margin>
                        <Insets left="40.0" right="40.0" />
                     </VBox.margin>
                  </Pane>
                   <GridPane>
                       <columnConstraints>
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                           <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                       </columnConstraints>
                       <rowConstraints>
                           <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                       </rowConstraints>
                       <children>
                           <HBox alignment="CENTER_RIGHT" spacing="30.0" GridPane.columnIndex="1">
                               <children>
                                   <Button fx:id="saveButton" mnemonicParsing="false" text="Save">
                                       <font>
                                           <Font size="14.0"/>
                                       </font>
                                   </Button>
                                   <Button fx:id="finishButton" mnemonicParsing="false" text="Finish">
                                       <font>
                                           <Font size="14.0"/>
                                       </font>
                                   </Button>
                               </children>
                           </HBox>
                           <HBox alignment="CENTER_LEFT">
                               <children>
                                   <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel">
                                       <font>
                                           <Font size="14.0"/>
                                       </font>
                                   </Button>
                               </children>
                           </HBox>
                       </children>
                       <VBox.margin>
                           <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
                       </VBox.margin>
                   </GridPane>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>

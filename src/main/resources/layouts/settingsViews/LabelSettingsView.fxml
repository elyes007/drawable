<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.disguisedtoast.drawable.settingsModule.controllers.LabelSettingsViewController">
    <center>
        <BorderPane>
            <center>
                <GridPane hgap="20.0" vgap="20.0">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="40.0" right="40.0" top="20.0" />
                    </BorderPane.margin>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="140.0" minWidth="140.0" prefWidth="140.0" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label minWidth="118.0" text="Text">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                  <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1">
                     <children>
                         <ComboBox fx:id="textValue" editable="true" minWidth="246.0"/>
                        <HBox alignment="CENTER" spacing="2.0">
                           <children>
                              <ToggleButton fx:id="boldButton" mnemonicParsing="false" styleClass="icon_button">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../drawable/icons/bold_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <padding>
                                    <Insets top="1.0" />
                                 </padding>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </ToggleButton>
                              <ToggleButton fx:id="italicButton" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" styleClass="icon_button">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../drawable/icons/italic_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <padding>
                                    <Insets top="1.0" />
                                 </padding>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </ToggleButton>
                              <ToggleButton fx:id="underlinedButton" layoutX="32.0" layoutY="13.0" mnemonicParsing="false" styleClass="icon_button">
                                 <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../drawable/icons/underlined_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <padding>
                                    <Insets top="1.0" />
                                 </padding>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </ToggleButton>
                           </children>
                        </HBox>
                        <ComboBox fx:id="textSize" editable="true" prefWidth="90.0" />
                        <Label fx:id="fontColorPane">
                           <tooltip>
                              <Tooltip text="Can't select font color when using a color theme." />
                           </tooltip>
                        </Label>
                     </children>
                  </HBox>
                        <CheckBox fx:id="textWrap" mnemonicParsing="false" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </CheckBox>
                        <Label text="Text Wrap" GridPane.rowIndex="1">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </GridPane>
            </center>
            <top>
                <BorderPane BorderPane.alignment="CENTER">
                    <left>
                        <Label styleClass="screen_message" text="Image Settings" BorderPane.alignment="CENTER">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </left>
                    <center>
                        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                            <children>
                                <Pane prefHeight="0.5" styleClass="light_separator" />
                            </children>
                            <BorderPane.margin>
                                <Insets left="10.0" />
                            </BorderPane.margin>
                        </VBox>
                    </center>
                    <BorderPane.margin>
                        <Insets left="10.0" />
                    </BorderPane.margin>
                </BorderPane>
            </top>
            <padding>
                <Insets left="30.0" right="30.0" top="30.0"/>
            </padding>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </BorderPane>
    </center>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <top>
                <BorderPane minWidth="780.0" BorderPane.alignment="CENTER">
                    <left>
                        <Label styleClass="screen_message" text="Element Settings" BorderPane.alignment="CENTER">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </left>
                    <center>
                        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                            <children>
                                <Pane prefHeight="0.5" styleClass="light_separator" />
                            </children>
                            <BorderPane.margin>
                                <Insets left="10.0" />
                            </BorderPane.margin>
                        </VBox>
                    </center>
                    <BorderPane.margin>
                        <Insets left="10.0" />
                    </BorderPane.margin>
                </BorderPane>
            </top>
            <padding>
                <Insets left="30.0" right="30.0" top="10.0"/>
            </padding>
            <center>
                <VBox BorderPane.alignment="CENTER">
                    <children>
                        <GridPane hgap="20.0" vgap="20.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="140.0" minWidth="140.0" prefWidth="140.0" />
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints hgrow="SOMETIMES" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label fx:id="deleteButton" text="Delete Label" textFill="#ff5e5e"
                                       GridPane.rowIndex="2">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </Label>
                                <Label text="Position">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="1"
                                      GridPane.hgrow="ALWAYS">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                                            <children>
                                                <Label text="Horizontal">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Label>
                                                <Label fx:id="posHValue" minWidth="46.0" styleClass="screen_message"
                                                       text="(Default)"/>
                                            </children>
                                        </HBox>
                                        <Slider fx:id="horizontalPosition" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                                                minWidth="-Infinity" HBox.hgrow="ALWAYS"/>
                                    </children>
                                    <GridPane.margin>
                                        <Insets/>
                                    </GridPane.margin>
                                    <padding>
                                        <Insets right="20.0"/>
                                    </padding>
                                </HBox>
                                <Label text="Scale" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="1"
                                      GridPane.rowIndex="1">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                                            <children>
                                                <Label text="Horizontal">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Label>
                                                <Label fx:id="scaleHValue" minWidth="46.0" styleClass="screen_message"
                                                       text="(Default)"/>
                                            </children>
                                        </HBox>
                                        <Slider fx:id="horizontalScale" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
                                    </children>
                                    <padding>
                                        <Insets right="20.0"/>
                                    </padding>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="2"
                                      GridPane.hgrow="ALWAYS">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                                            <children>
                                                <Label text="Vertical">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Label>
                                                <Label fx:id="posVValue" minWidth="46.0" styleClass="screen_message"
                                                       text="(Default)"/>
                                            </children>
                                        </HBox>
                                        <Slider fx:id="verticalPosition" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
                                    </children>
                                    <padding>
                                        <Insets left="20.0"/>
                                    </padding>
                                </HBox>
                                <HBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                                            <children>
                                                <Label text="Vertical">
                                                    <font>
                                                        <Font size="14.0"/>
                                                    </font>
                                                </Label>
                                                <Label fx:id="scaleVValue" minWidth="46.0" styleClass="screen_message"
                                                       text="(Default)"/>
                                            </children>
                                        </HBox>
                                        <Slider fx:id="verticalScale" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
                                    </children>
                                    <padding>
                                        <Insets left="20.0"/>
                                    </padding>
                                </HBox>
                            </children>
                        </GridPane>
                    </children>
                    <BorderPane.margin>
                        <Insets left="40.0" right="40.0" top="20.0"/>
                    </BorderPane.margin>
                </VBox>
            </center>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </BorderPane>
    </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="root" stylesheets="@../../css/global.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.disguisedtoast.drawable.homeModule.controllers.HomeLayoutController">
   <top>
      <BorderPane style="-fx-background-color: #3c3f41;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets/>
         </BorderPane.margin>
         <right>
            <HBox spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="storyboardBtn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                          minWidth="-Infinity" mnemonicParsing="false" onAction="#showStoryboard" text="Storyboard"
                          textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="20.0">
                           <image>
                              <Image url="@../../drawable/shuffle.png"/>
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font name="System Bold" size="14.0"/>
                     </font>
                  </Button>
                  <Button fx:id="scrollBtn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                          minWidth="-Infinity" mnemonicParsing="false" onAction="#showScrollView" text="Scroll View">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="20.0">
                           <image>
                              <Image url="@../../drawable/scroll.png"/>
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font name="System Bold" size="14.0"/>
                     </font>
                  </Button>
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                          mnemonicParsing="false">
                     <graphic>
                        <ImageView fx:id="settings" fitHeight="18.0" fitWidth="20.0">
                           <image>
                              <Image url="@../../drawable/homeDrawables/gear.png"/>
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font size="14.0"/>
                     </font>
                  </Button>
                  <Button fx:id="export" alignment="BASELINE_CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                          onAction="#exportProject" text="Export" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="14.0"/>
                     </font>
                  </Button>
               </children>
            </HBox>
         </right>
         <left>
            <TextField fx:id="search" prefWidth="300.0" promptText="Search" BorderPane.alignment="CENTER"/>
         </left>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
         </padding>
      </BorderPane>
   </top>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="startPane" prefHeight="700.0" prefWidth="800.0" stylesheets="@../../css/global.css"
            xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.disguisedtoast.drawable.projectGenerationModule.generation.GlobalProjectGeneration">

      
         <center>
            <VBox>
               <children>
                  <BorderPane>
                     <center>
                        <AnchorPane prefHeight="720.0" prefWidth="1360.0" BorderPane.alignment="CENTER">
                           <children>
                               <Button fx:id="openProject" alignment="CENTER" layoutX="202.0" layoutY="117.0"
                                       mnemonicParsing="false" style="-fx-background-color: transparent;">
                           <graphic>
                                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../drawable/folder.png" />
                                       </image>
                                    </ImageView>
                           </graphic>
                              </Button>
                               <Button fx:id="newProject" alignment="CENTER" layoutX="207.0" layoutY="76.0"
                                       mnemonicParsing="false" style="-fx-background-color: transparent;">
                                   <graphic>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../drawable/add.png" />
                                       </image>
                                    </ImageView>
                                   </graphic>
                              </Button>
                               <Label alignment="CENTER" contentDisplay="CENTER" layoutX="248.0" layoutY="82.0"
                                      text="Create new project" textAlignment="CENTER" textFill="#3c3c3c">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                               <Label alignment="CENTER" contentDisplay="CENTER" layoutX="248.0" layoutY="128.0"
                                      text="Open  an existing project" textAlignment="CENTER" textFill="#00000080">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                           </children>
                            <BorderPane.margin>
                                <Insets/>
                            </BorderPane.margin>
                        </AnchorPane>
                     </center>
               <top>
                  <ImageView fitHeight="98.0" fitWidth="394.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                     <image>
                        <Image url="@../../drawable/logo.png" />
                     </image>
                     <BorderPane.margin>
                         <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
                     </BorderPane.margin>
                  </ImageView>
               </top>
                      <right>
                          <VBox alignment="TOP_CENTER" prefHeight="425.0" prefWidth="313.0"
                                BorderPane.alignment="CENTER">
                              <BorderPane.margin>
                                  <Insets bottom="60.0" left="60.0" right="50.0" top="60.0"/>
                              </BorderPane.margin>
                              <children>
                                  <Label alignment="CENTER" contentDisplay="CENTER"
                                         style="-fx-background-color: transparent; -fx-text-fill: #3c3c3c; -fx-text-alignment: center;"
                                         text="Recent Projects" textAlignment="CENTER">
                                      <font>
                                          <Font size="15.0"/>
                                      </font>
                                  </Label>
                                  <ListView fx:id="recentProjectsList" accessibleRole="HYPERLINK" fixedCellSize="0.0"
                                            prefHeight="372.0" prefWidth="274.0"
                                            style="-fx-border-color: none; -fx-background-color: none; -fx-fixed-cell-color: none;">
                                      <VBox.margin>
                                          <Insets bottom="10.0" left="10.0" right="25.0" top="15.0"/>
                                      </VBox.margin>
                                  </ListView>
                              </children>
                          </VBox>
                      </right>
                  </BorderPane>
               </children>
            </VBox>
         </center>
      </BorderPane>
